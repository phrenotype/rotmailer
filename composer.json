        "smtp load balancing",
        "rotating mailer",
        "email sending",
        "smtp accounts",
        "php smtp",
        "email deliverability",
        "php email"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Paul Robert",
            "email": "paul@paulrobert.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "RotMailer\\": "src/",
            "tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0.0",
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
